{
    "test_with_one_command": {
        "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
        "features": {
            "ghcr.io/devcontainers/features/common-utils:1": {
                "installZsh": false,
                "installOhMyZsh": false,
                "upgradePackages": false,
                "username": "octocat"
            },
            "command_runner": {
                "command1": "echo cmd1 > /tmp/cmd1.log"
            }
